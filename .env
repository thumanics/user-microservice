APP_NAME="User Microservice"
APP_ENV=local
APP_KEY=base64:YourGeneratedKeyHere
APP_DEBUG=true
APP_URL=http://localhost:8001

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Microservice Database
DB_CONNECTION=mysql
DB_HOST=user-db
DB_PORT=3306
DB_DATABASE=user_microservice
DB_USERNAME=root
DB_PASSWORD=

# Other Services URLs
ORDER_SERVICE_URL=http://order-service:8002
NOTIFICATION_SERVICE_URL=http://notification-service:8003
API_GATEWAY_URL=http://api-gateway

# Message Queue (Redis for events)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Service Discovery
SERVICE_NAME=user-microservice
SERVICE_VERSION=1.0.0
SERVICE_PORT=8001